{
  "name": "greenview",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Reduces webpage average energy consumption for a more eco-friendly browsing experience",
  "icons": {
    "16": "icons/ticker_sticker_1.png",
    "48": "icons/ticker_sticker_1.png",
    "128": "icons/ticker_sticker_1.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/fontHandler.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title" : "greenview"
  },
  "permissions": [
    "debugger",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", 
        "https://*/*"
      ],
      "css": ["css/custom.css"],
      "js": ["scripts/inject.js"],
      "run_at": "document_start"  // begins running once the HMTL has at least started to be parsed. Only guaranteed element is <html>
    }
  ]
}